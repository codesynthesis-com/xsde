root = ..\..\..\..

!include $(root)\build\config.nmake

dirs =

!if "$(XSDE_IOSTREAM)" == "y"
!if "$(XSDE_EXCEPTIONS)" == "y"

!if "$(XSDE_STL)" == "y"
dirs = $(dirs) wildcard
!endif

!endif
!endif

all:
	@for %i in ( $(dirs) ) do \
@cmd /c "cd %i & $(MAKE) /nologo /f nmakefile"

test clean:
	@for %i in ( $(dirs) ) do \
@cmd /c "cd %i & $(MAKE) /nologo /f nmakefile $@"
