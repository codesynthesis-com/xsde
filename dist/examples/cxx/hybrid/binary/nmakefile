root = ..\..\..\..

!include $(root)\build\config.nmake

dirs =

!if "$(XSDE_IOSTREAM)" == "y"
!if "$(XSDE_EXCEPTIONS)" == "y"

dirs = $(dirs) custom

!if "$(XSDE_CDR)" == "y"
dirs = $(dirs) cdr
!endif

!if "$(XSDE_XDR)" == "y"
dirs = $(dirs) xdr
!endif

!endif
!endif

all:
	@for %i in ( $(dirs) ) do \
@cmd /c "cd %i & $(MAKE) /nologo /f nmakefile"

test clean:
	@for %i in ( $(dirs) ) do \
@cmd /c "cd %i & $(MAKE) /nologo /f nmakefile $@"
