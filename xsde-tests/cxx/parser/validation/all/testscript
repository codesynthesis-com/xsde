test.arguments += test.xml

: 000
:
{
  cat <<EOI >=test.xml;
    <t:root xmlns:t="test"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="test test.xsd">

      <!-- all combinations -->
      <all>
        <a>a</a>
        <b>b</b>
        <c>c</c>
      </all>

      <all>
        <a>a</a>
        <c>c</c>
        <b>b</b>
      </all>

      <all>
        <b>b</b>
        <a>a</a>
        <c>c</c>
      </all>

      <all>
        <b>b</b>
        <c>c</c>
        <a>a</a>
      </all>

      <all>
        <c>c</c>
        <a>a</a>
        <b>b</b>
      </all>

      <all>
        <c>c</c>
        <b>b</b>
        <a>a</a>
      </all>

      <!-- optional c is not present -->
      <all>
        <a>a</a>
        <b>b</b>
      </all>

      <all>
        <a>a</a>
        <b>b</b>
      </all>

    </t:root>
    EOI

  $* >>EOO
    {
      a = a
      b = b
      c = c
    }

    {
      a = a
      c = c
      b = b
    }

    {
      b = b
      a = a
      c = c
    }

    {
      b = b
      c = c
      a = a
    }

    {
      c = c
      a = a
      b = b
    }

    {
      c = c
      b = b
      a = a
    }

    {
      a = a
      b = b
    }

    {
      a = a
      b = b
    }

    EOO
}

: 001
:
{
  cat <<EOI >=test.xml;
    <t:root xmlns:t="test"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="test test.xsd">

      <!-- required b is not present (invalid) -->
      <all>
        <a>a</a>
        <c>c</c>
      </all>

    </t:root>
    EOI

  $* >>EOO
    {
      a = a
      c = c
      9:8 expected element not encountered
    }

    EOO
}

: 002
:
{
  cat <<EOI >=test.xml;
    <t:root xmlns:t="test"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="test test.xsd">

      <!-- invalid -->
      <all>
      </all>

    </t:root>
    EOI

  $* >>EOO
    {
      7:8 expected element not encountered
    }

    EOO
}

: 003
:
{
  cat <<EOI >=test.xml;
    <t:root xmlns:t="test"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="test test.xsd">

      <!-- invalid -->
      <all>
       <a>a</a>
       <b>b</b>
       <a>a</a>
      </all>

    </t:root>
    EOI

  $* >>EOO
    {
      a = a
      b = b
      9:6 unexpected element encountered
    }

    EOO
}
